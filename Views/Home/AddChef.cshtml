@model Chef
<div class="card col-7 mx-auto form-group">
    <h1 style="text-align: center;" class="display-4">Add a Chef!</h1>
    <hr>
    <form class="dish-form" action="/addchef" method="post">
            <div class="form-item">
                <div class="form-group">
                    <label asp-for="FirstName">First Name</label>
                    <input class="form-control" asp-for="FirstName" type="text">
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Last Name</label>
                    <input class="form-control" asp-for="LastName" type="text">
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Birthday">Date of Birth</label>
                    <input class="form-control" asp-for="Birthday" type="date">
                    <span class="text-danger" asp-validation-for="Birthday"></span>
                </div>
            </div>
        <button style="width: 27em; margin-bottom: .5em;" class="btn btn-outline-primary btn-block mx-auto " type="sumbit">Add Chef</button>
    </form>
</div>